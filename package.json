{
  "name": "y2k-ui",
  "version": "1.1.0",
  "description": "A Y2K-inspired component library with translucent materials, chrome effects, and futuristic aesthetics",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./styles/globals.css"
  },
  "files": [
    "dist",
    "styles",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c && npm run build-css",
    "build-css": "cp styles/globals.css dist/styles.css",
    "build-storybook": "storybook build",
    "dev": "rollup -c -w",
    "demo": "vite dev",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "storybook": "storybook dev -p 6006",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "y2k",
    "design-system",
    "tailwindcss",
    "typescript",
    "glassmorphism",
    "chrome",
    "translucent",
    "futuristic",
    "early-2000s",
    "stereo",
    "tech-aesthetic"
  ],
  "author": "Zenith Research <gabriel@yzenith-research.ca>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZenithResearch/y2k-ui.git"
  },
  "bugs": {
    "url": "https://github.com/ZenithResearch/y2k-ui/issues"
  },
  "homepage": "https://zenith-research.ca",
